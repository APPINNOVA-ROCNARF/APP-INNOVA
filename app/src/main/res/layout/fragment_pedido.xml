                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="0"
                    android:textAlignment="viewEnd" />
                <TextView
                    android:id="@+id/tv_final_gen_fragment_pedido"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="0"
                    android:layout_marginEnd="4dp"
                    android:textAlignment="viewEnd" />
            </LinearLayout>


            <View
