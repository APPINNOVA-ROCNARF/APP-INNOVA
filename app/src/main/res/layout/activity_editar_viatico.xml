<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditarViaticoActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Periodo "
                android:textAppearance="?android:attr/textAppearanceListItem"
                />

            <TextView
                android:id="@+id/ciclo_show"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_height="wrap_content"
                android:text="Periodo "
                android:textAppearance="?android:attr/textAppearanceListItem"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Concepto "
                android:textAppearance="?android:attr/textAppearanceListItem"
                />

            <TextView
                android:id="@+id/concepto_show"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_height="wrap_content"
                android:text="Concepto "
                android:textAppearance="?android:attr/textAppearanceListItem"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="120dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="RUC"
                android:textAppearance="?android:attr/textAppearanceListItem"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_ruc_viatico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0"
                android:inputType="number"
                android:maxLength="13"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="120dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="RazÃ³n Social"
                android:textAppearance="?android:attr/textAppearanceListItem"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_razonsocial_viatico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="120dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="# Factura"
                android:textAppearance="?android:attr/textAppearanceListItem"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_factura_viatico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="number" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="120dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Fecha Factura"
                android:textAppearance="?android:attr/textAppearanceListItem"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_fecha_factura_viatico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="120dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Subtotal"
                android:textAppearance="?android:attr/textAppearanceListItem"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_subtotal_viatico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0"
                android:inputType="numberDecimal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="120dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="IVA"
                android:textAppearance="?android:attr/textAppearanceListItem"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_subtotal_iva_viatico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0"
                android:inputType="numberDecimal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="120dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textAppearance="?android:attr/textAppearanceListItem"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_total_viatico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0"
                android:inputType="numberDecimal" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_placa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:orientation="horizontal">


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="120dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Placa"
                android:textAppearance="?android:attr/textAppearanceListItem"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_placa_viatico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:maxLength="7"
                android:inputType="text" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageV_foto_viatico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                />

        </LinearLayout>



    </LinearLayout>

</ScrollView>